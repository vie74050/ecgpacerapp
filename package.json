{
  "name": "ecg-pacemaker-app",
  "version": "1.0.0",
  "description": "ECG monitor and pacemaker simulator",
  "main": "index.html",
  "scripts": {
    "start": "webpack && http-server",
    "build": "webpack && esbuild src/built/ecg-pacer-app.js --minify --outfile=dist/ecg-pacer-app.min.js && node-sass --output-style compressed -o dist/css src/scss",
    "dev": "webpack -w",
    "scss": "node-sass --output-style compressed -o dist/css src/scss"
  },
  "dependencies": {
    "esbuild": "^0.17.10",
    "http-server": "^0.12.3",
    "jquery": "^3.6.3",
    "node-sass": "^8.0.0",
    "node-scss": "^7.0.3"
  },
  "devDependencies": {
    "@types/jquery": "^3.5.16",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  }
}
